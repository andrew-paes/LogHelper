<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <level>
    <name value="TRACE" />
    <value value="20000" />
  </level>
  <root>
    <level value="ALL"/>
    <appender-ref ref="RollingLogFileAppender"/>
    <appender-ref ref="ConsoleAppender"/>
  </root>
  <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
    <file type="log4net.Util.PatternString" value="%property{LogPath}\%property{AppName}%property{UserDisplayName}.log" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <datePattern value=".yyyyMMdd" />
    <countDirection value="1" />
    <maxSizeRollBackups value="7" />
    <maximumFileSize value="2MB" />
    <layout type="log4net.Layout.PatternLayout">
      <header type="log4net.Util.PatternString" value="Date|Host|Environment|Thread|Level|Message%newline" />
      <conversionPattern value="%date|%property{log4net:HostName}|%2thread|%-5level|%message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <acceptOnMatch value="true" />
      <levelMin value="ALL" />
      <levelMax value="FATAL" />
    </filter>
  </appender>
  <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="ERROR"/>
      <foreColor value="White"/>
      <backColor value="Red, HighIntensity"/>
    </mapping>
    <mapping>
      <level value="DEBUG"/>
      <foreColor value="Green"/>
    </mapping>
    <mapping>
      <level value="WARN"/>
      <foreColor value="White"/>
      <backColor value="Blue, HighIntensity"/>
    </mapping>
    <mapping>
      <level value="INFO"/>
      <foreColor value="White"/>
    </mapping>
    <mapping>
      <level value="TRACE"/>
      <foreColor value="Yellow"/>
    </mapping>
    <mapping>
      <level value="VERBOSE"/>
      <foreColor value="Cyan"/>
    </mapping>
    <!--* Blue -
    * Green -
    * Red -
    * White -
    * Yellow -
    * Purple -
    * Cyan -
    * HighIntensity -->
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%2thread|%level|%message%newline"/>
    </layout>

    <filter type="log4net.Filter.LevelRangeFilter">
      <acceptOnMatch value="true" />
      <levelMin value="ALL" />
      <levelMax value="FATAL" />
    </filter>
  </appender>
</log4net>
